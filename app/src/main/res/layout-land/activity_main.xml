<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7D6FB"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/artTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Название"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/artCity"
        app:layout_constraintStart_toStartOf="@+id/artCity" />

    <TextView
        android:id="@+id/artCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Город"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/artCountry"
        app:layout_constraintStart_toStartOf="@+id/artCountry"
        app:layout_constraintTop_toBottomOf="@+id/artTitle" />

    <TextView
        android:id="@+id/artCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="Страна"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/artCity" />

    <ImageView
        android:id="@+id/artImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:contentDescription="Достопримечательности"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="236dp"
        android:layout_height="55dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="46dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/artImage"
        app:layout_constraintTop_toBottomOf="@+id/artCountry">

        <Button
            android:id="@+id/prevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Назад" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Вперёд" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
